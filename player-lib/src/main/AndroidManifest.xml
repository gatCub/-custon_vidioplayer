        &lt;!&ndash; The actions you wish to listen to, below is an example &ndash;&gt;
        <action android:name="android.intent.action.MEDIA_SCANNER_SCAN_FILE"/>
      </intent-filter>
    </receiver>-->

  </application>
</manifest>