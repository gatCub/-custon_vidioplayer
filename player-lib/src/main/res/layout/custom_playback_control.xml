<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorNull"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@id/exo_pause"
        style="@style/ExoMediaButton.Pause"
        android:background="@drawable/circle_back"
        android:layout_height="60dp"
        android:layout_width="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@id/exo_play"
        style="@style/ExoMediaButton.Play"
        android:background="@drawable/circle_back"
        android:layout_height="60dp"
        android:layout_width="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/exo_settings"
        style="@style/ExoStyledControls.Button.Bottom.Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/circle_back"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/settings_save"
        android:src="@drawable/exo_styled_controls_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        android:background="@drawable/circle_back"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/exo_subtitle"
        style="@style/ExoStyledControls.Button.Bottom.CC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/circle_back"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/exo_settings"
        app:layout_constraintTop_toTopOf="@+id/exo_settings" />

    <ImageButton
        android:id="@+id/exo_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_back"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:scaleType="center"
        android:layout_marginLeft="15dp"
        android:src="@drawable/exo_styled_controls_fastforward"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/exo_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/exo_subtitle" />

    <View
        android:id="@id/exo_rew"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_back"
        app:layout_constraintEnd_toStartOf="@+id/exo_pause"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/view_back"
        app:layout_constraintTop_toTopOf="@+id/view_back"
        app:layout_constraintVertical_bias="0.504" />

    <View
        android:id="@id/exo_ffwd"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_back"
        app:layout_constraintEnd_toEndOf="@+id/view_back"
        app:layout_constraintStart_toEndOf="@+id/exo_pause"
        app:layout_constraintTop_toTopOf="@+id/view_back" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@id/exo_position"
                style="@style/ExoStyledControls.TimeText.Position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="4dp" />

            <TextView
                android:id="@id/exo_position"
                style="@style/ExoStyledControls.TimeText.InterpunctCustom"
                android:background="@drawable/circle_back"
                android:includeFontPadding="false"
                android:paddingLeft="4dp" />

            <TextView
                android:id="@id/exo_duration"
                style="@style/ExoStyledControls.TimeText.Position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/exo_fullscreen"
                style="@style/ExoStyledControls.Button.Bottom.FullScreen"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_back"
                android:scaleType="center" />

        </LinearLayout>

        <View
            android:id="@+id/exo_progress_placeholder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/exo_custom_progress_thumb_size"
            android:layout_weight="1"
            android:background="@drawable/circle_back" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
